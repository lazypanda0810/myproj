<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".QuizResultsActivity">

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:text="Your Score: 4/5" />

    <TextView
        android:id="@+id/tv_motivational_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textAlignment="center"
        tools:text="Great job! You've passed the quiz." />

    <Button
        android:id="@+id/btn_generate_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Generate Certificate"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_view_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View Certificate"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_retake_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Retake Quiz" />

</LinearLayout>